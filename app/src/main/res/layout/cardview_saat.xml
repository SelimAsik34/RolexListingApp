<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCamTipi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dortdp"
                android:layout_marginTop="@dimen/kırkdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtSaatAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtSaatAdi"
                tools:text="(21 Mayıs - 22 Haziran )" />

            <ImageView
                android:id="@+id/imgSaatLogo"
                android:layout_width="@dimen/yuzdp"
                android:layout_height="@dimen/yuzdp"
                android:layout_marginStart="@dimen/onaltıdp"
                android:layout_marginTop="@dimen/onaltıdp"
                android:layout_marginBottom="@dimen/onaltıdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtSaatAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/onaltıdp"
                android:textColor="@color/colorRolexGold"
                android:textSize="@dimen/onsekizsp"
                app:layout_constraintStart_toEndOf="@+id/imgSaatLogo"
                app:layout_constraintTop_toTopOf="@+id/imgSaatLogo"
                tools:text="KOÇ BURCU" />

            <TextView
                android:id="@+id/txtKasaCapi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dortdp"
                android:layout_marginTop="@dimen/onikidp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtSaatAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtSaatAdi"
                tools:text="(21 Mayıs - 22 Haziran )" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>